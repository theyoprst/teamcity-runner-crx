{
  "manifest_version": 2,
  "name": "Teamcity Runner",
  "description": "Runs custom builds in Teamcity without fristrating idles",
  "version": "1.0",
  "permissions": [
    "declarativeContent",
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "page_action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html",
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background" : {
    "scripts": ["background.js"],
    "persistent": false
  }
}
